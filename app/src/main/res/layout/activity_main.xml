<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/test">

    <ImageButton
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:id="@+id/imageButton1"
        android:src="@drawable/gps"
        android:layout_weight="1"
        android:layout_x="21dp"
        android:layout_y="0dp"
        android:clickable="true"
        android:onClick="onClick1" />


    <ImageButton
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/cases"
        android:layout_weight="1"
        android:layout_x="21dp"
        android:layout_y="166dp"
        android:onClick="onClick2"/>

    <ImageButton
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:src="@drawable/bill"
        android:id="@+id/imageButton3"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:layout_x="21dp"
        android:layout_y="332dp"
        android:onClick="onClick3"/>

    <Button
        android:layout_width="131dp"
        android:layout_height="63dp"
        android:text="English law"
        android:id="@+id/button"
        android:layout_x="41dp"
        android:layout_y="495dp"
        android:background="#f5deb3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="131dp"
        android:layout_height="63dp"
        android:text="Dictionary"
        android:id="@+id/button2"
        android:layout_x="207dp"
        android:layout_y="495dp"
        android:background="#f5deb3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:text="Recently"
        android:id="@+id/button3"
        android:layout_x="205dp"
        android:layout_y="406dp"
        android:background="#f5deb3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="67dp"
        android:text="Exist"
        android:id="@+id/button4"
        android:layout_x="205dp"
        android:layout_y="354dp"
        android:background="#f5deb3" />
    <ImageView
        android:layout_width="198dp"
        android:layout_height="198dp"
        android:src="@drawable/law"
        android:layout_x="162dp"
        android:layout_y="113dp" />


</AbsoluteLayout>



